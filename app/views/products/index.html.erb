<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Quantidade</th>
      <th>Valor</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.amount %></td>
        <td><%= product.value %></td>
        <td><%= product.category_id %></td>
       
        <td><%= link_to 'Editar', edit_product_path(product), class: 'glyphicon glyphicon-pencil' %></td>
        <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "glyphicon glyphicon-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_product_path, class: 'btn btn-primary' %>
